{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "lib/build", // Avoid accidentally building in root

    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,

    "target": "es2020",
    "moduleResolution": "node",
    "lib": ["DOM", "ES2020"],
    "esModuleInterop": true,

    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "allowUnreachableCode": false
  },
  "include": ["src/api"],
  "exclude": ["node_modules", "**/*.test.ts"]
}
